<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE taglib PUBLIC "-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN" "http://java.sun.com/dtd/web-jsptaglibrary_1_2.dtd">
<taglib>
	<tlib-version>1.0</tlib-version>
	<jsp-version>1.2</jsp-version>
	<short-name>triart</short-name>
	<uri>http://www.talentum.se/taglib/authenticator</uri>
	<display-name>Authenticator Taglib</display-name>
	<description>Authenticator Taglib provides tags to handle authentication</description>

	<tag>
		<name>checkAgreement</name>
		<tag-class>talentum.escenic.plugins.authenticator.taglib.CheckAgreementTag</tag-class>
		<body-content>empty</body-content>
    <description>Check the agreement of an article</description>
    <attribute>
      <name>id</name>
      <required>true</required>
      <rtexprvalue>false</rtexprvalue>
      <description>A page scope variable holding a boolean value. True if article is accepted.</description>
    </attribute>
    <attribute>
      <name>article</name>
      <required>false</required>
      <rtexprvalue>true</rtexprvalue>
      <description>An article object to test.</description>
    </attribute>
    <attribute>
      <name>articleId</name>
      <required>false</required>
      <rtexprvalue>true</rtexprvalue>
      <description>The ID of an article to test.</description>
    </attribute>
	</tag>

</taglib>
