<struts-config>

	<form-beans>
		<form-bean name="authenticator.LoginForm"
			type="talentum.escenic.plugins.authenticator.struts.LoginForm" />

	</form-beans>

	<action-mappings>
		<action path="/login"
			type="talentum.escenic.plugins.authenticator.struts.LoginAction"
			name="authenticator.LoginForm" input="/administration/users/loginform/" validate="false"
			scope="request">
			<forward name="authenticated" path="/"
				redirect="true" />
			<forward name="not-authenticated" path="/administration/users/authentication_failure/"
				redirect="true" />
		</action>

		<action path="/logout"
			type="talentum.escenic.plugins.authenticator.struts.LogoutAction">
			<forward name="not-authenticated" path="/"
				redirect="true" />
		</action>
		
		<action path="/status"
			type="talentum.escenic.plugins.authenticator.struts.UserStatusAction">
			<forward name="status" path="/userinfo.jsp" />
		</action>

	</action-mappings>

	<controller
		processorClass="com.escenic.tools.struts.RequestProcessor" />
	<message-resources parameter="com.escenic.search.Application"
		null="false" />

</struts-config>